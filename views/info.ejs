<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center flex-grow-1">
  <div
    class="card mb-3"
    style="max-width: 1000px; max-height: 502px; color: black"
  >
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="<%= data.Poster %> "
          class="img-fluid rounded-start"
          alt="..."
          style="height: 500px"
        />
      </div>
      <div class="col-md-7 mx-4 my-4">
        <div class="card-body">
          <h3 class="card-title"><%= data.Title %></h3>
          <h6><%= data.Year %></h6>
          <p class="card-text text-muted"><%= data.Genre %></p>
          <h5 class="card-text fw-semibold">
            Directed By : <%= data.Director %>
          </h5>
          <h6>IMDB Rating : <%= data.imdbRating %></h6>
          <p class="card-text my-4"><%= data.Plot %></p>
          <p class="card-text">
            <small class="text-muted"
              >Runtime : <%= data.Runtime %> ( per episode )</small
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
