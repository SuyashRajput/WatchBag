<% layout('layouts/boilerplate') %>

<div class="card mb-3" style="max-width: 800px">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="<%= data.Poster %> "
        class="img-fluid rounded-start"
        alt="..."
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= data.Title %></h3>
        <h5 class="card-text fw-semibold"><%= data.Writer %></h5>
        <h6><%= data.Year %></h6>
        <p class="card-text text-muted"><%= data.Genre %></p>
        <p class="card-text"><%= data.Plot %></p>
        <p class="card-text">
          <small class="text-muted">Last updated 3 mins ago</small>
        </p>
      </div>
    </div>
  </div>
</div>
